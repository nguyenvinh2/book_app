<!DOCTYPE html>
<html>
  <head>
    <Title>Here are some Books</Title>
    <link rel="stylesheet" href="styles/reset.css">
    <link rel="stylesheet" href="styles/base.css">
  </head>
  <body>
    <h1>Here are some Books!</h1>
      <% let count = 0; %>
      <% bookArr.forEach(book => { %>
      <ul>
        <li><%= book.title %></li>
        <button class="button-id <%=count%>" type="submit">Add This Book!</button>
      </ul>
      <section class="create-view-container <%=count%>">
        <form id="create-form" action="/add" method="post">
          <input type="text" name="title" value="<%= book.title %>">
          <input type="text" name="author" value="<%= book.author %>">
          <input name="description" value="<%= book.description %>">
          <input type="text" name="isbn" value="<%= book.isbn %>">
          <input type="text" name="image-url" value="<%= book.imgUrl %>">
          <input type="text" name="bookshelf" placeholder="Bookshelf Number">
          <button  class="create-view-container <%=count%>" type="submit">Save Book</button>
        </form>
      </section>
      <%count ++; %>
    <%})%>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="/js/app.js"></script>
  </body>
</html>