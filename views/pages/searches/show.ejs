<!DOCTYPE html>
<html>
  <%- include('../../layout/head') %>
  <body>
  <%- include('../../layout/header') %>
    <h1>Here are some Books!</h1>
      <% let count = 0; %>
      <% bookArr.forEach(book => { %>
      <ul id="add-button">
        <li><%= book.title %></li>
        <li>By: <%= book.author %></li>
        <button class="button-id <%=count%>" type="submit">Add This Book!</button>
      </ul>
      <section class="create-view-container <%=count%>">
        <form id="create-form" action="/add" method="post">
          <input type="text" name="title" value="<%= book.title %>">
          <input type="text" name="author" value="<%= book.author %>">
          <textarea name="description" value="<%= book.description %>" wrap="hard"><%= book.description %></textarea>
          <input type="text" name="isbn" value="<%= book.isbn %>">
          <input type="text" name="imageurl" value="<%= book.imgUrl %>">
          <input type="text" name="bookshelf" placeholder="Bookshelf Number">
          <button  class="create-view-container <%=count%>" type="submit">Save Book</button>
        </form>
      </section>
      <%count ++; %>
    <%})%>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="/js/app.js"></script>
  </body>
</html>