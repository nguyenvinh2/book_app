<!DOCTYPE html>
<html>
  <link rel="stylesheet" type="text/css" href="../styles/reset.css">
  <link rel="stylesheet" type="text/css" href="../styles/layout.css">
  <link rel="stylesheet" type="text/css" href="../styles/modules.css">
  <link rel="stylesheet" type="text/css" href="../styles/base.css">
  <link rel="stylesheet" type="text/css" href="../styles/icons.css">
  <body>
      <%- include('../layout/header') %>
      <section class="detail-view container">
        <ul class="detail-list">
          <li class="book-item" data-id="<%= book.id %>">
            <h3>Bookshelf Category: <%= book.bookshelf %></h4>
          </li>
          <li class="book-item" data-id="<%= book.id %>">
            <h4>Title: <%= book.title %></h4>
          </li>
          <li class="book-item" data-id="<%= book.id %>">
            <img src=<%= book.image_url %>>
          </li>
          <li class="book-item" data-id="<%= book.id %>">
            <p>Author: <%= book.author %></p>
          </li>
          <li class="book-item" data-id="<%= book.id %>">
            <p>Description: <%= book.description %></p>
          </li>
          <li class="book-item" data-id="<%= book.id %>">
            <p>ISBN: <%= book.isbn %></p>
          </li>
          <form id="delete-form" action="/delete/<%=book.id%>" method="post"> 
            <input type="hidden" name="_method" value="delete">
            <li class="book-item detail-buttons" data-id="<%= book.id %>">
              <button type="button" class="edit">Edit Book</button>
            </li>
            <li class="book-item detail-buttons" data-id="<%= book.id %>">
              <button type="submit">Delete Book</button>
            </li>
           </form>
        </ul>
      </section>

      <section class="book-view-update">
        <form id="update-form" action="/update/<%=book.id%>" method="post">
          <input type="hidden" name="_method" value="put">
          <label for="title">Title</label><br>
          <input type="text" name="title" value="<%= book.title %>" data-id="<%= book.id %>"><br>
          <label for="Author">Author</label><br>
          <input type="text" name="author" value="<%= book.author %>"><br>
          <label for="description">Book Summary</label><br>
          <textarea name="description" value="<%= book.description %>" wrap="soft"><%= book.description %></textarea><br>
          <label for="isbn">ISBN</label><br>
          <input type="text" name="isbn" value="<%= book.isbn %>"><br>
          <label for="image">Host Image Location</label><br>
          <input type="text" name="imageurl" value="<%= book.image_url %>"><br>
          <label for="bookshelf">Bookshelf Category</label><br>
          <input type="text" name="bookshelf" value="<%=book.bookshelf %>"><br>
          <button class="edit" type="submit">Update Book</button>
          <button class="edit" type="button">Go Back</button>
        </form>
      </section>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="../js/app.js"></script>
  </body>
</html>